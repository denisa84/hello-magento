<!-- Here we are using Foundations Section to create the tabs. See http://foundation.zurb.com/docs/components/section.html for more info -->
<div class="section-container product-tabs auto" data-section>
  <?php $counter = 0; ?>
  <?php foreach ($this->getTabs() as $_index => $_tab): ?>
    <?php if($this->getChildHtml($_tab['alias'])): ?>
      <section>
        <h2 class="title" data-section-title><a name="<?php echo $_tab['alias']?>" href="#"><?php echo $_tab['title']?></a></h2>
        <div class="content" data-section-content>
          <p><?php echo $this->getChildHtml($_tab['alias']) ?></p>
        </div>
      </section>
    <?php endif; ?>
  <?php endforeach; ?>
</div>
